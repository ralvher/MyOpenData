<html lang="es">
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
    <meta charset="utf-8"/>
    <title>MyOpenData</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport"/>
    <link href="/css/bootstrap.min.css" rel="stylesheet">/</link>
    <!--[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    -->
    <link href="/css/styles.css" rel="stylesheet">/</link>
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" role="navigation">MyOpenData</a>
          <button class="navbar-toggle" data-target="#navbar-main" data-toggle="collapse" type="button">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <nav class="navbar-nav navbar-left">
              <a class="navbar-brand" href="/aditivos">Aditivos</a>
          </nav>
        </div>
      </div>

    </div>
    <div class="container">
       <div class="row">
         <div class="text-center v-center">
            <form role="form" action="/aditivos" method="post">
              <div class="form-group">
                <input type="text" class="form-control" name="busqueda" id="busqueda" placeholder="ejemplo: E-111 - toxico">
              </div>
              
              <button type="submit">Submit</button>
            </form>
        </div>        

      <div class="row">
        <h1 class="text-center">Lista Aditivos</h1>
          <% if @consulta ==  nil %>
            <table class="table-responsive table table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Adictivo</th>
                    <th>Nombre</th>
                    <th>Toxicidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% @list.each do |valor| %>
                    <tr>
                      <td>
                        <%= valor.id %>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.numero %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.name %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.toxicidad %></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          <% else %>
             <table class="table-responsive table table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Adictivo</th>
                    <th>Nombre</th>
                    <th>Toxicidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% @consulta.each do |valor| %>
                    <tr>
                      <td>
                        <%= valor.id %>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.numero %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.name %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.toxicidad %></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          <% end %>

    </div>
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </body>
</html>