<html lang="es">
  <head>
    <meta content="text/html; charset=UTF-8" http-equiv="content-type"/>
    <meta charset="utf-8"/>
    <title>MyOpenData</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport"/>
    <link href="/css/bootstrap.min.css" rel="stylesheet">/</link>
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <!--[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    -->
    <link href="/css/styles.css" rel="stylesheet">/</link>
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="/" role="navigation">MyOpenData</a>
          <button class="navbar-toggle" data-target="#navbar-main" data-toggle="collapse" type="button">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
          <nav class="navbar-nav navbar-left">
              <a class="navbar-brand" href="/aditivos">Aditivos</a>
          </nav>
        </div>
      </div>

    </div>
    <div class="container">
       <div class="row">

        <i class="v-center aa fa fa-font fa-4x"></i>
         <div class="col-xs-12 col-md-12 col-sm-12 col-lg-12">
            <form role="form" action="/aditivos" method="post">
              <div class="form-group col-xs-12 col-md-10 col-sm-12 col-lg-10">
                <input type="text" class="form-control" name="busqueda" id="busqueda" placeholder="ejemplo: E-111 - toxico">
              </div>
              
              <button class="btn btn-primary col-xs-12 col-md-2 col-sm-12 col-lg-2" type="submit">Buscar</button>
            </form>
        </div>        

      <div class="row">
          <% if @consulta ==  nil %>
            <table id="myTable" class="table-responsive table table-hover col-xs-12 col-md-12 col-sm-12 col-lg-12">
                <thead>
                  <tr>
                    <th>Aditivo</th>
                    <th>Nombre</th>
                    <th>Toxicidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% @list.each do |valor| %>
                    <tr>                      
                      <td>
                        <a href="/" target="_blank"><%= valor.numero %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.name %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.toxicidad %></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          <% else %>
             <table id="myTable" class="table-responsive table table-hover col-xs-12 col-md-12 col-sm-12 col-lg-12">
                <thead>
                  <tr>
                    <th>Aditivo</th>
                    <th>Nombre</th>
                    <th>Toxicidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% @consulta.each do |valor| %>
                    <tr>                      
                      <td>
                        <a href="/" target="_blank"><%= valor.numero %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.name %></a>
                      </td>
                      <td>
                        <a href="/" target="_blank"><%= valor.toxicidad %></a>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
          <% end %>

    </div>
    
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/actualizar.js"></script>
    <script src="/js/search.js"></script>
  </body>
</html>